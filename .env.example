# Supabase project URL (used by the frontend to connect to your Supabase backend)
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url

# Public anonymous Supabase API key (safe to expose in frontend)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-key

# Secret key for UploadThing (used server-side for file uploads)
UPLOADTHING_SECRET=sk_live_your-uploadthing-secret

# App ID for UploadThing (used by client to identify your app)
UPLOADTHING_APP_ID=your-uploadthing-app-id

# Base site URL for the app (used for generating absolute links, redirects, etc.)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# LiveKit API key (used server-side to generate access tokens)
LIVEKIT_API_KEY=your-livekit-api-key

# LiveKit API secret (keep this secure â€“ used with the API key for token signing)
LIVEKIT_API_SECRET=your-livekit-api-secret

# Public WebSocket URL for LiveKit (used by the client to connect to media servers)
NEXT_PUBLIC_LIVEKIT_URL=wss://your-livekit-url.livekit.cloud
